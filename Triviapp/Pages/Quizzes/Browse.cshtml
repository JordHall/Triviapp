@page
@model Triviapp.BrowseModel

@{
    ViewData["Title"] = "Quizzes";
}
<div class="row">
    <div class="col-md-11">
        <h1>Quizzes</h1>
    </div>
    <div class="col-md-1">
        <a class="btn btn-primary" asp-page="Create">Create</a>
    </div>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quiz[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quiz[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quiz[0].DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Quiz)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    <a class="btn btn-primary" asp-page="Play" asp-route-id="@item.ID">Play</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
