@page
@model Triviapp.ProfileModel

@{
    ViewData["Title"] = "Profile";
}
<div class="text-center" style="margin: 0 auto; margin-top: 40px;">
    <h1 style="padding: 40px;">@Model.Account.Username</h1>
    <h2 style="margin-bottom:1em;">My Quizzes:</h2>
    <div id="quizContainer">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>
                        Quiz
                    </th>
                    <th>
                        Category
                    </th>
                    <th class="hidden-sm">
                        Date Added
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model.Account.Quizzes)
                {
                <tr>
                    <!--TITLE-->
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => quiz.Title)
                    </td>
                    <!--CATEGORY-->
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => quiz.Category)
                    </td>
                    <!--DATE ADDED-->
                    <td class="align-middle hidden-sm">
                        @Html.DisplayFor(modelItem => quiz.DateAdded)
                    </td>
                    <!--UTILITY BUTTONS-->
                    <td>
                        <a class="btn btn-danger float-right" style="margin-left: 10px;" asp-page="./Quizzes/Delete" asp-route-id="@quiz.ID">Delete</a>
                        <a class="btn btn-secondary float-right" style="margin-left: 10px;" asp-page="./Quizzes/Edit" asp-route-id="@quiz.ID">Edit</a>
                        <a class="btn btn-primary float-right" style="margin-left: 10px;" asp-page="./Quizzes/Play" asp-route-id="@quiz.ID">Play</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>